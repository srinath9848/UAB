@model UAB.DAL.LoginDTO.ApplicationUser
@using UAB.DAL.LoginDTO

    @{
        var result  = new List<ApplicationUser>()
        {
            new ApplicationUser{ ProjectName =Model.ProjectName ,RoleName=Model.RoleName},
           new ApplicationUser{ ProjectName =Model.ProjectName ,RoleName=Model.RoleName},
           new ApplicationUser{ ProjectName =Model.ProjectName ,RoleName=Model.RoleName}
        };



    }

    <style>
        .modal-content {
            margin-top: 63px;
        }
    </style>

    <form asp-action="Add_EditUser" asp-controller="Account" method="POST">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">

                    @Html.HiddenFor(model => model.UserId, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off" })

                    @if (Model.UserId != 0)
                    {
                        <h5 class="card" style="width:300px">Update User</h5>
                    }
                    else
                    {

                        <h5 class="card" style="width:300px">Add New User</h5>
                    }

                    <div class="form-group row">
                        <label class="col-md-1">Email</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off", @placeholder = "Enter Email " })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-1">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "custom-control-input ShadowQADetails", @id = "customControlAutosizing1" })
                                <label class="custom-control-label" for="customControlAutosizing1">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-1">Projects</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.ProjectId, new SelectList(@ViewBag.Projects, "ID", "Name"), "--Select a Project--", new { @id = "projectdd", @class = "form-control CoderDetails" })
                            @Html.ValidationMessageFor(model => model.ProjectId, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-1">Roles</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.RoleId, new SelectList(@ViewBag.Roles, "ID", "Name"), "--Select a Role--", new { @id = "roledd", @class = "form-control CoderDetails" })
                            @Html.ValidationMessageFor(model => model.RoleId, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-sm btn-info btn-fill" id="AddRoleandProject">Add</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="table-responsive col-8">
                            <table id="AddedProjectwithRoles" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 250px; font-weight:900;">Project</th>
                                        <th style="width: 250px; font-weight:900;">Role</th>
                                        <th style="width: 250px; font-weight:900;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in result)
                                    {
                                        <tr>
                                            <td>item.ProjectName</td>
                                            <td>item.RoleName</td>
                                            <td><button type="button" style="cursor: pointer" class="btn btn-sm btn-danger btn-fill"><i class="fa fa-times"></i>Delete</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (Model.UserId != 0)
                        {
                            <button type="submit" class="btn btn-sm btn-info btn-fill">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-sm btn-info btn-fill">Save</button>
                        }
                        <button type="button" class="btn btn-sm btn-danger btn-fill" onclick="ModalClose1()">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>



