@model UAB.DAL.LoginDTO.ApplicationUser
@using UAB.DAL.LoginDTO


<style>
    .modal-content {
        margin-top: 63px;
    }
    .errorTxt {
        color: red;
        min-height: 20px;
    }
</style>
<h5 class="card" style="text-align: center; font-size: 20px;">Add User</h5>
<p id="ErrorMessage" class="errorTxt"></p>

<form asp-action="AddUser" asp-controller="Account" method="POST">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <input type="hidden" name="ProjectAndRole" id="hdnProjectAndRole" />
                @Html.HiddenFor(model => model.UserId, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off" })
                @Html.HiddenFor(model => model.ProjectUserId, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off" })

                @*<h5 class="card" style="width:300px">Add User</h5>*@
                @*<h5 class="card" style="text-align: center; font-size: 20px;">Add User</h5>*@

                <div class="form-group row">
                    <label class="col-md-1">Email</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.Email, new SelectList(@ViewBag.Identityusers, "Email"), "--Select a Email--", new { @id = "emaildd", @class = "form-control CoderDetails" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "custom-control-input ShadowQADetails", @id = "customControlAutosizing1" })
                            <label class="custom-control-label" for="customControlAutosizing1">Is Active</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-1">Projects</label>
                    <div class="col-md-3">
                        @Html.DropDownListFor(model => model.ProjectId, new SelectList(@ViewBag.Projects, "ProjectId", "Name"), "--Select a Project--", new { @id = "projectdd", @class = "form-control CoderDetails" })
                        @Html.ValidationMessageFor(model => model.ProjectId, null, new { @class = "text-danger" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <label class="col-md-1 ">Roles</label>
                    <div class="col-md-3">
                        @Html.DropDownListFor(model => model.RoleId, new SelectList(@ViewBag.Roles, "RoleId", "Name"), "--Select a Role--", new { @id = "roledd", @class = "form-control CoderDetails" })
                        @Html.ValidationMessageFor(model => model.RoleId, null, new { @class = "text-danger" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-sm btn-info btn-fill" id="AddRoleandProject">Add</button>
                    </div>
                </div>
                <div class="form-group row" id="tbleProjectwithRoles" style="display:none;">
                    <div class="table-responsive col-8">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 250px; font-weight:900;">Project</th>
                                    <th style="width: 250px; font-weight:900;">Role</th>
                                    <th style="width: 250px; font-weight:900;">Action</th>
                                </tr>
                            </thead>
                            <tbody id="tableid">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-info btn-fill" id="btnsubmit">Save</button>
                    <a href="@Url.Action("ManageUsers","Account")" class="btn btn-sm btn-danger btn-fill">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var hideError = function () {
            $("#ErrorMessage").hide();
        };
        var ProjectAndRole = [];
        var iCnt = 0;
        $("#btnSave").prop('disabled', true);
        $(document).on('click', '#AddRoleandProject', function () {
            if (iCnt <= 100) {
                iCnt = iCnt + 1;
                var Email = $("#emaildd option:selected").text();
                var ProjectId = $("#projectdd option:selected").text();
                var RoleId = $("#roledd option:selected").text();
                if (Email !== "--Select a Email--" && ProjectId !== "--Select a Project--" && RoleId !== "--Select a Role--") {
                    $("#tableid").append('<tr id="tr' + iCnt + '"><td id="txtproject' + iCnt + '">' + ProjectId + '</td><td id="txtrole' + iCnt + '">' + RoleId + '</td><td><button type="button" id="btndelete" title="btn_' + iCnt + '"  style="cursor: pointer" class="btn btn-sm btn-danger btn-fill"><i class="fa fa-times"></i>Delete</button></td></td></tr >');
                    var ProjectAndRolevalue = ProjectId + "^" + RoleId;
                    ProjectAndRole.push(ProjectAndRolevalue);
                    $("#hdnProjectAndRole").val(ProjectAndRole);
                    $("#tbleProjectwithRoles").show();
                    
                }
                else {
                    $("#ErrorMessage").html('Please Select Email,Project and Role');
                    setTimeout(hideError, 5000);
                }
            }
        });

        $(document).on('click', '#btndelete', function () {
            var id = $(this).attr('title').split("btn_")[1];
            var ProjectId = $("#txtproject" + id).text();
            var RoleId = $("#txtrole" + id).text();
            var ProjectAndRolevalue = ProjectId + "^" + RoleId;
            ProjectAndRole.splice($.inArray(ProjectAndRolevalue, ProjectAndRole), 1);
            $("#hdnProjectAndRole").val(ProjectAndRole);
            $('#tr' + id).remove();
        });
        $('#btnsubmit').click(function (e) {
            var ProjectId = $("#projectdd option:selected").text();
            var RoleId = $("#roledd option:selected").text();
            if (ProjectId !== "--Select a Project--" && RoleId !== "--Select a Role--") {
            } else {
                e.preventDefault();
            }
        });

    });
</script>


