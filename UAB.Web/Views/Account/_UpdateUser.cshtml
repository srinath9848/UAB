@model List<UAB.DAL.LoginDTO.ApplicationUser>
@using UAB.DAL.LoginDTO

@{
    int i = 0;
}



<style>
    .modal-content {
        margin-top: 90px;
    }

    .errorTxt {
        color: red;
        min-height: 20px;
    }

    .tableresponsiveforroles {
        max-height: 200px;
    }

    .roledddwith {
        width: 215px;
    }
</style>

<form asp-action="UpdateUser" asp-controller="Account" method="POST">
    @*<input type="hidden" name="ProjectAndRole" id="hdnProjectAndRole" />*@
    @Html.HiddenFor(model => model.First().hdnProjectAndRole)
    @Html.HiddenFor(model => model.First().UserId)
    <div class="modal fade modal-mini modal-primary show" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 500px;">
                <br />
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            <h5 class="card" style="width:300px">Update User</h5>
                        </div>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.First().Email, new { @class = "form-control", @autofocus = "autofocus", @autocomplete = "off", @readonly = "readonly" })
                            @*@Html.DropDownListFor(model => model.First().Email, new SelectList(@ViewBag.Identityusers, "Email"), "--Select a Email--", new { @id = "emaildd", @class = "form-control CoderDetails" })*@
                            @Html.ValidationMessageFor(model => model.First().Email, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.First().ProjectId, new SelectList(@ViewBag.Projects, "ProjectId", "Name"), "--Select a Project--", new { @id = "projectdd", @class = "form-control CoderDetails" })
                            @Html.ValidationMessageFor(model => model.First().ProjectId, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.First().RoleId, new SelectList(@ViewBag.Roles, "RoleId", "Name"), "--Select a Role--", new { @id = "roledd", @class = "form-control CoderDetails" })
                            @Html.ValidationMessageFor(model => model.First().RoleId, null, new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-3 custom-control custom-checkbox mr-sm-2">
                                @Html.CheckBoxFor(model => model.First().IsActive, new { @class = "custom-control-input ShadowQADetails", @id = "customControlAutosizing1" })
                                <label class="custom-control-label" for="customControlAutosizing1">Is Active</label>
                            </div>
                        </div>
                        <br />
                        <div class="col-md-10">
                            <button type="button" class="btn btn-sm btn-info btn-fill" id="AddRoleandProject">Add</button>
                        </div>
                    </div>
                    <div class="form-group row" id="tbleProjectwithRoles">
                        <div class="table-responsive tableresponsiveforroles col-md-10">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 250px; font-weight:900;">Project</th>
                                        <th style="width: 250px; font-weight:900;">Role</th>
                                        <th style="width: 250px; font-weight:900;">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tableid">
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr id="tr_@i">
                                                <td id="txtproject_@i">@item.ProjectName</td>
                                                <td id="txtrole_@i">@item.RoleName</td>
                                                <td>
                                                    <button type="button" id="btndelete" title="btn_@i" style="cursor: pointer"
                                                            class="btn btn-sm btn-danger btn-fill">
                                                        <i class="fa fa-times"></i>Delete
                                                    </button>
                                                </td>
                                            </tr>

                                            i = i + 1;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-sm btn-info btn-fill" id="btnsubmit">Update</button>
                            <button type="button" class="btn btn-sm btn-danger btn-fill" onclick="ModalClose1()">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {

        var ProjectAndRole = [];
        ProjectAndRole.push($("#hdnProjectAndRole").val());
        var iCnt = @i;
        $(document).on('click', '#AddRoleandProject', function () {
            $("#ErrorMessage").text('');
            if (iCnt <= 100) {
                iCnt = iCnt + 1;
                var Project = $("#projectdd option:selected").text();
                var Role = $("#roledd option:selected").text();

                var ProjectId = $("#projectdd option:selected").text();
                var RoleId = $("#roledd option:selected").text();

                if (Project !== "--Select a Project--" && Role !== "--Select a Role--") {
                    var ProjectAndRolevalue = ProjectId + "^" + RoleId;
                    if ($.inArray(ProjectAndRolevalue, ProjectAndRole) == -1) {
                        $("#tableid").append('<tr id="tr_' + iCnt + '"><td id="txtproject_' + iCnt + '">' + ProjectId + '</td><td id="txtrole_' + iCnt + '">' + RoleId + '</td><td><button type="button" id="btndelete" title="btn_' + iCnt + '"  style="cursor: pointer" class="btn btn-sm btn-danger btn-fill"><i class="fa fa-times"></i>Delete</button></td></td></tr >');
                        ProjectAndRole.push(ProjectAndRolevalue);
                        $("#hdnProjectAndRole").val(ProjectAndRole);
                        $("#tbleProjectwithRoles").show();
                    }
                }
                else {
                    if (ProjectId === "--Select a Project--")
                        $("#validproject").html('<span id="projectdd-error" class="">Project is required.</span>');
                    else
                        $("#validproject").html('');

                    if (RoleId === "--Select a Role--")
                        $("#validrole").html('<span id="roledd-error" class="">Role is required.</span>');
                    else
                        $("#validrole").html('');
                }
            }
        });

        $(document).on('click', '#btndelete', function () {
            var id = $(this).attr('title').split("btn_")[1];
            var ProjectId = $("#txtproject_" + id).text();
            var RoleId = $("#txtrole_" + id).text();
            var ProjectAndRolevalue = ProjectId + "^" + RoleId;
            ProjectAndRole.splice($.inArray(ProjectAndRolevalue, ProjectAndRole), 1);
            $("#hdnProjectAndRole").val(ProjectAndRole);
            $('#tr_' + id).remove();
        });
    });
</script>


