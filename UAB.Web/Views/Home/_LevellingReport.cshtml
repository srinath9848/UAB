@model List<UAB.DTO.LelvellingReportDTO>
@{
    ViewData["Title"] = "Payor";
}

<style>
    .table td, .table th {
        padding: 10px !important;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    th.sorting_asc {
        width: 160px !important;
    }

    .pagination {
        margin-left: 200px;
    }

    .alert {
        padding: 0.5rem 1.25rem;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card">Levelling Report</h5>
                    <div id="modalContent"></div>
                    <div class="table-responsive col-8">
                        <table id="Reports" class="table table-striped table-bordered">
                            <thead>
                                @if (Model.Count != 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        if (item.columns != null)
                                        {
                                            <tr>
                                                @for (int i = 0; i < item.columns.Count; i++)
                                                {
                                                    <th style="width: 250px; font-weight:900;">@item.columns[i]</th>
                                                }
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th colspan="3">No data found !</th>
                                    </tr>
                                }
                            </thead>
                            <tbody>
                                @if (Model.Count != 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="body" data="@item.EmLevel">
                                            <td>@item.EmCode</td>
                                            <td>@item.Date1</td>
                                            <td>@item.Date2</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">
    $('#Reports').DataTable();
    $("#Reports_length").html('');
    $("#Reports_filter").html('');

    var reportsArray = [];
    var reportscolor = ['', 'odd', 'even', 'odd', 'even'];
    var backgroundcolor = ['', "rgba(0, 0, 0, 0.05)", "rgba(0, 0, 0, 0)", "rgba(0, 0, 0, 0.05)", "rgba(0, 0, 0, 0)"];
    $(".body").each(function () {
        var id = $(this).attr("data");
        if ($.inArray(id, reportsArray) == -1) {
            reportsArray.push(id);
            $(this).addClass(reportscolor[id]);
            $(this).css("background-color", backgroundcolor[id]);
        } else {
            $(this).addClass(reportscolor[id]);
            $(this).css("background-color", backgroundcolor[id]);
        }
    });
</script>

