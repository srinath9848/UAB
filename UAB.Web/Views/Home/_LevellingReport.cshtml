@using System.Data
@model DataSet
@{
    ViewData["Title"] = "Payor";
}

<style>
    .table td, .table th {
        padding: 10px !important;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    th.sorting_asc {
        width: 160px !important;
    }

    .pagination {
        margin-left: 200px;
    }

    .alert {
        padding: 0.5rem 1.25rem;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card">Levelling Report</h5>
                    <div id="modalContent"></div>
                    <div class="table-responsive col-8">
                        <table id="Reports" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    @foreach (DataColumn clmn in Model.Tables[0].Columns)
                                    {
                                        if (clmn.ColumnName != "EMLevel")
                                        {
                                            <th style="width: 250px; font-weight:900;">@clmn.ColumnName</th>
                                        }
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{ List<int> i = new List<int>();
                                    List<int> j = new List<int>();
                                }
                                @foreach (DataRow row in Model.Tables[0].Rows)
                                {

                                    int row1 = row.ItemArray[2].ToString() != "" ? Convert.ToInt32(row.ItemArray[2]) : 0;
                                    i.Add(row1);
                                    int row2 = row.ItemArray[3].ToString() != "" ? Convert.ToInt32(row.ItemArray[3]) : 0;
                                    j.Add(row2);
                                    <tr class="body" data="@row[0]">
                                        <td>@row[1]</td>
                                        <td>@row1</td>
                                        <td>@row2</td>
                                    </tr>
                                }
                                <tr>
                                    <td>TOTALS</td>
                                    <td>@i.Sum()</td>
                                    <td>@j.Sum()</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">
    $('#Reports').DataTable();
    $("#Reports_length").html('');
    $("#Reports_filter").html('');

    var reportsArray = [];
    var reportscolor = ['', 'odd', 'even', 'odd', 'even'];
    var backgroundcolor = ['', "rgba(0, 0, 0, 0.05)", "rgba(0, 0, 0, 0)", "rgba(0, 0, 0, 0.05)", "rgba(0, 0, 0, 0)"];
    $(".body").each(function () {
        var id = $(this).attr("data");
        if ($.inArray(id, reportsArray) == -1) {
            reportsArray.push(id);
            $(this).addClass(reportscolor[id]);
            $(this).css("background-color", backgroundcolor[id]);
        } else {
            $(this).addClass(reportscolor[id]);
            $(this).css("background-color", backgroundcolor[id]);
        }
    });
</script>

