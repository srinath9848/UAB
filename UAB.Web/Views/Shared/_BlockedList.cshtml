@model List<UAB.DTO.ChartSummaryDTO>
@using UAB.enums

<style>
    .modal-content {
        margin-top: 90px;
    }

    .errorTxt {
        color: red;
        min-height: 20px;
    }

    .tableresponsiveforroles {
        max-height: 200px;
    }

    .roledddwith {
        width: 215px;
    }
</style>
<div class="modal fade modal-mini modal-primary show" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content" style="width:900px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">List Of Blocked Charts</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="ModalClose1()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="table-responsive">
                <table id="Users" class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th style="width: 250px; font-weight:900;">Action</th>
                            <th style="width: 250px; font-weight:900;">Chart Id</th>
                            <th style="width: 250px; font-weight:900;">MRN</th>
                            <th style="width: 250px; font-weight:900;">Block Category</th>
                            <th style="width: 250px; font-weight:900;">Remarks</th>
                            <th style="width: 250px; font-weight:900;">Created On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @switch (@ViewBag.Role)
                                    {
                                        case "QA":
                                            <a href="@Url.Action("GetCodingBlockedCharts", "UAB", new { Role = Roles.QA, ChartType = "Block", ProjectID =item.ProjectID, ProjectName =item.ProjectName,ccid=item.CodingDTO.ClinicalCaseID,plusorminus="Current"})" class="btn btn-info btn-sm">Open</a>
                                            break;
                                        default:
                                            <a href="@Url.Action("GetCodingBlockedCharts", "UAB", new { Role = Roles.Coder, ChartType = "Block", ProjectID =item.ProjectID, ProjectName =item.ProjectName,ccid=item.CodingDTO.ClinicalCaseID,plusorminus="Current"})" class="btn btn-info btn-sm">Open</a>
                                            break;
                                    }
                                </td>
                                <td>@item.CodingDTO.ClinicalCaseID</td>
                                <td>@item.CodingDTO.PatientMRN</td>
                                <td>@item.BlockCategory</td>
                                <td>@item.BlockRemarks</td>
                                <td>@item.BlockedDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger btn-fill" onclick="ModalClose1()">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        ModalClose1 = function () {
            $("#modalContent").html('');
        }
    });

</script>
