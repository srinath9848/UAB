@model List<UAB.DTO.ChartSummaryDTO>;

<style>
    .modal-content {
        margin-top: 90px;
    }

    .errorTxt {
        color: red;
        min-height: 20px;
    }

    .tableresponsiveforroles {
        max-height: 200px;
    }

    .roledddwith {
        width: 215px;
    }
</style>
<div class="modal fade modal-mini modal-primary show" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 500px;">
            <div class="modal-header">
                <div class="col-12 row" style="margin-top:5px;">
                    <div class="col-10">
                        <h6 class="modal-title" id="exampleModalLongTitle"><span>Chart Summary Details</span></h6>
                    </div>
                    <div class="col-2">
                        <input class="btn btn-info" style="height:32px" type="button" onclick="ExportChartSummaryReportDetails()" value="Export" />
                    </div>
                    <input type="hidden" id="ColumnName" value="@ViewBag.ColumnName" />
                    <input type="hidden" id="dos" value="@ViewBag.dos" />
                    <input type="hidden" id="ProjectId" value="@ViewBag.ProjectId" />

                </div>
                @*<h5 class="modal-title" id="exampleModalLongTitle">Chart Summary Details</h5>*@
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="ModalClose1()">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div style="margin-left: 12px;">
                <h6 class="modal-title" id="exampleModalLongTitle"><span>Project : @ViewBag.projectname</span></h6>
            </div>
            <div style="margin-left: 12px;">
                <h6 class="modal-title" id="exampleModalLongTitle"><span>Type : @ViewBag.ColumnName</span></h6>
            </div>
            <div style="margin-left: 12px;">
                <h6 class="modal-title" id="exampleModalLongTitle"><span>DOS : @ViewBag.dos</span></h6>
            </div>
            <br />
            <div class="table-responsive col-12" style="max-height:300px;overflow-y:scroll">
                <table id="Users" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 250px; font-weight:900;">Date Of Service</th>
                            @if (ViewBag.projectType == "IP")
                            {
                                <th style="width: 250px; font-weight:900;">List Name</th>
                            }
                            <th style="width: 250px; font-weight:900;">MRN</th>
                            <th style="width: 250px; font-weight:900;">Patient Name</th>
                            <th style="width: 250px; font-weight:900;">Provider</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CodingDTO.DateOfService</td>
                                @if (ViewBag.projectType == "IP")
                                {
                                    <td>@item.CodingDTO.ListName</td>
                                }
                                <td>@item.CodingDTO.PatientMRN</td>
                                <td>@item.CodingDTO.Name</td>
                                <td>@item.ProviderName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger btn-fill" onclick="ModalClose1()">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        ExportChartSummaryReportDetails = function () {
            var ColumnName = $("#ColumnName").val();
            var dos = $("#dos").val();
            var ProjectId = $("#ProjectId").val();
            
            $.ajax({
                type: "GET",
                url: "@Url.Action("ExportChartSummaryReportDetails", "Home")",
                data: {
                    "ColumnName": ColumnName,
                    "dos": dos,
                    "ProjectId": ProjectId
                },
                success: function (response) {
          $("#modalContent1").html(response);
                },
                failure: function (response) {
                    alert(response);
                }
            });
        };

        ModalClose1 = function () {
            $("#modalContent1").html('');
        }
    });

</script>
