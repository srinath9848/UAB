    .col-md-3 {
        margin-left: 10px !important;
    }

    .form-control {
        padding: 0 !important;
    }
</style>
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Coding Details</h4>
        </div>
        <div class="form-group row">
            <label class="col-md-3 m-t-15">Payor</label>
            <div class="col-md-3">
                <select class="form-control">
                    <option>MCAL</option>
                    <option>Commercial</option>
                    <option>SP</option>
                </select>
            </div>
            <label class="col-md-3 m-t-15">Note Title</label>
            <div class="col-md-3">
                <textarea class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 m-t-15">Provider</label>
            <div class="col-md-3">
                <select class="form-control">
                    <option>Bush, Nathan, APP</option>
                    <option>Dillon, Kayce, APP</option>
                </select>
            </div>
            <label class="col-md-3 m-t-15">CPT</label>
            <div class="col-md-3">
                <select class="form-control">
                    <option>31640</option>
                    <option>31500</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 m-t-15">Mod</label>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Mod">
            </div>
            <label class="col-md-3 m-t-15">Dx 1-4 (code followed by a comma and space)</label>
            <div class="col-md-3">
                <textarea class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 m-t-15"> Feedback to Provider</label>
            <div class="col-md-3">
                <select class="form-control">
                    <option>Education: CC doesn't support vital organ failure/life threatening deteriortation</option>
                    <option>Education: Consult not coded due to no requesting provider on file</option>
                </select>
            </div>
            <label class="col-md-3 m-t-15">Coder Questions</label>
            <div class="col-md-3">
                <textarea class="form-control"></textarea>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body" style="text-align:right">
                <button type="submit" class="btn btn-success Available">Submit</button>
                <button type="submit" class="btn btn-danger Available">Hold</button>
                <button type="submit" class="btn btn-success Approved">Posted Completed</button>
            </div>
        </div>
    </div>
</div>
