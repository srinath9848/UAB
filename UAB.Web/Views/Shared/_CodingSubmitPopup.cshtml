@model UAB.DTO.ChartSummaryDTO
@using UAB.enums

<style>
    .modal-content {
        margin-top: 90px;
    }

    .errorTxt {
        color: red;
        min-height: 20px;
    }

    .tableresponsiveforroles {
        max-height: 200px;
    }

    .roledddwith {
        width: 215px;
    }
</style>

<div class="modal fade modal-mini modal-primary show" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: block;">
    <input type="hidden" name="codingSubmitAndGetNext" value="@ViewBag.buttonType" />
    <div class="modal-dialog">
        <div class="modal-content" style="width:900px;max-height:500px;margin-top:200px !important">
            <div class="modal-header" style="background-color:moccasin">
                <h5 class="modal-title" id="exampleModalLongTitle">Submit Coding</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="ModalClose1()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="table-responsive" style="max-height:400px">
                <br /><br /> <span style="text-align:center">This chart is not marked for Audit, do you want to Post it now?</span><br /><br />
            </div>
            <div class="modal-footer">
                <button type="submit" id="submitAndPost" name="submitAndPost" class="btn btn-sm btn-danger btn-fill">OK</button>
                <button type="submit" id="submitOnly" name="submitOnly" class="btn btn-sm btn-danger btn-fill">Later</button>
            </div>
        </div>
    </div>
</div>

<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#submitAndPost,#submitOnly").click(function (e) {
            $("#hdnSubmitAndPost").val($(this).attr("id"));
        });

        ModalClose1 = function () {
            $("#modalContent").html('');
        }
    });

</script>
