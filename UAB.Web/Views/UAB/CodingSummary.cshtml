@using UAB.enums
@model List<UAB.DTO.DashboardDTO>
@{
    ViewData["Title"] = "CodingSummary";
}
<style type="text/css">
    .highlight {
        background-color: #a8cb17 !important;
    }
    .availableCharts, .qaRebuttalCharts, .readyForPostingCharts{
        width:60px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Projects</h4><br />
                    @await Html.PartialAsync("_Msg")
                </div>
                <table class="table table-striped table-bordered dataTable workcontexts">
                    <thead>
                        <tr>
                            <th scope="col" class="tblHeaderRow">
                                Name
                            </th>
                            <th scope="col" class="tblHeaderRow">
                                Available Charts
                            </th>
                            <th scope="col" class="tblHeaderRow">
                                Incorrect Charts
                            </th>
                            <th scope="col" class="tblHeaderRow">
                                ReadyForPosting Charts
                            </th>
                        </tr>
                    </thead>
                    <tbody style="cursor:pointer;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="col">
                                    <b> @item.ProjectName</b>
                                </td>
                                <td scope="col" style="text-align:center">
                                    @if (item.AvailableCharts == 0)
                                    {
                                        <label class="availableCharts">@item.AvailableCharts</label>
                                        <b>&nbsp;&nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("Coding", "UAB")" style="pointer-events: none;" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                    else
                                    {
                                        <label class="availableCharts">@item.AvailableCharts</label>
                                        <b>&nbsp; &nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("Coding", "UAB",new { Role=Role.Coder,ChartType="Available",ProjectID = item.ProjectID})" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                </td>
                                <td scope="col" style="text-align:center">
                                    @if (item.QARebuttalCharts == 0)
                                    {
                                    <label class="qaRebuttalCharts">@item.QARebuttalCharts</label>
                                        <b>&nbsp;&nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("IncorrectCharts", "UAB")" style="pointer-events: none;" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                    else
                                    {
                                <label class="qaRebuttalCharts">@item.QARebuttalCharts</label>
                                        <b>&nbsp; &nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("IncorrectCharts", "UAB",new { Role=Role.Coder,ChartType="Incorrect",ProjectID = item.ProjectID})" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                </td>
                                <td scope="col" style="text-align:center">
                                    @if (item.ReadyForPostingCharts == 0)
                                    {
                                        <label class="readyForPostingCharts">@item.ReadyForPostingCharts</label>
                                        <b>&nbsp;&nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("ApprovedCharts", "UAB")" style="pointer-events: none;" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                    else
                                    {
                                        <label class="readyForPostingCharts">@item.ReadyForPostingCharts</label>
                                        <b>&nbsp; &nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("ApprovedCharts", "UAB",new { Role=Role.Coder,ChartType="ReadyForPosting",ProjectID = item.ProjectID})" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>

</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#coding").addClass('selected');
    });
</script>

