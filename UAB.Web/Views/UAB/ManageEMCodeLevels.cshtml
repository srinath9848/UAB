@model UAB.DTO.EMLevelDTO;
@{
    ViewData["Title"] = "Manage EM Levels";
    var result = (List<UAB.DTO.EMLevelDTO>)ViewBag.emlevels;
}

<style>
    .table td, .table th {
        padding: 10px !important;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .btn-danger {
        color: #fff;
        margin-left: 20px;
        background-color: #da542e;
        border-color: #da542e;
    }

    th.sorting_asc {
        width: 160px !important;
    }

    .pagination {
        margin-left: 200px;
    }

    .alert {
        padding: 0.5rem 1.25rem;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card" style="text-align: center; font-size: 20px;" id="manageusertitle">Manage Em Levels</h5>
                    @await Html.PartialAsync("_Msg")
                    <h5><button type="button" id="Addbtn" style="cursor: pointer" class="btn btn-sm btn-info btn-fill" onclick="Add('')"><i class="fa fa-plus"></i>Add EM Level</button></h5>
                    <br />
                    <div>
                        <label>Project</label>
                        @Html.DropDownListFor(model => model.ProjectId, new SelectList(@ViewBag.lstProject, "ProjectId", "Name"), new { @id = "projectdd" ,@style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.ProjectId, null, new { @class = "text-danger" })
                    </div>
                    <div id="modalContent"></div>
                    <br />
                    <div class="table-responsive col-12">
                        <table id="Users" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 250px; font-weight:900;">Action</th>
                                    <th style="width: 250px; font-weight:900;">EM Level</th>
                                    <th style="width: 250px; font-weight:900;">Project</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in result)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="EMLevelDetails"
                                               asp-controller="UAB" class="btn btn-sm btn-info btn-fill"
                                               asp-route-eMLevelId="@item.EMLevelId" asp-route-eMLevel="@item.EMLevel" asp-route-projectname="@item.ProjectName">
                                                <i class="fa fa-edit">Details</i>
                                            </a>
                                            <button type="button" style="cursor: pointer" class="btn btn-sm btn-danger btn-fill" onclick="Delete('@item')"><i class="fa fa-times"></i>Delete</button>
                                        </td>
                                        <td>@item.EMLevel</td>
                                        <td>@item.ProjectName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">
    $("#settings").addClass('selected');

    $('#Users').DataTable();
    $("#Users_length").html('');
    $("#Users_filter").html('');

    $(document).ready(function () {



        $("#projectdd").change(function () {
            debugger;
            var selctedproject = $("#projectdd").find('option:selected').val();
           
            $.ajax({
                type: "GET",
                url: "@Url.Action("ManageEMCodeLevels", "UAB")",
                data: { "selctedproject": selctedproject },
                success: function (response) {
                    $("#modalContent").html(response);
                },
                failure: function (response) {
                    alert(response);
                }
            });

        });


        Add= function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("AddEMLevel", "UAB")",
                success: function (response) {
                    $("#modalContent").html(response);
                },
                failure: function (response) {
                    alert(response);
                }
            });
        };
        Delete = function (eMLevel) {
            $.ajax({
                type: "GET",
                url: "@Url.Action("DeleteEMLevel", "UAB")",
                data: { "eMLevel": eMLevel },
                success: function (response) {
                    $("#modalContent").html(response);
                },
                failure: function (response) {
                    alert(response);
                }
            });
        };
    ModalClose1 = function () {
        $("#modalContent").html('');
        }
    });

</script>