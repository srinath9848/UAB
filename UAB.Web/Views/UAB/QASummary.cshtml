@using UAB.enums
@model List<UAB.DTO.DashboardDTO>
@{
    ViewData["Title"] = "QA Summary";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Projects</h4>
                    @await Html.PartialAsync("_Msg")
                </div>
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th scope="col">
                                <b>Name</b>
                            </th>
                            <th scope="col" style="text-align:center">
                                <b>Available Charts</b>
                            </th>
                            <th scope="col" style="text-align:center">
                                <b>Rebuttal  Charts</b>
                            </th>
                        </tr>
                    </thead>
                    <tbody style="cursor:pointer;">
                        @foreach (var item in Model.GroupBy(x => x.ProjectName).Select(x => x.FirstOrDefault()).ToList())
                        {
                            <tr>
                                <td scope="col">
                                    @item.ProjectName
                                </td>
                                <td scope="col" style="text-align:center">
                                    @{
                                        int AvailableCount = Model.Where(x => x.ProjectName == item.ProjectName && x.StatusID == (int)Statuses.CodingCompleted).Select(x => x.Cnt).FirstOrDefault();
                                    }
                                    @if (AvailableCount == 0)
                                    {
                                        @AvailableCount
                                        <b>&nbsp;&nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("QA", "UAB")" style="pointer-events: none;" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                    else
                                    {
                                        @AvailableCount
                                        <b>&nbsp; &nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("QA", "UAB",new { StatusIDs = Convert.ToString((int)Statuses.CodingCompleted),ProjectID = item.ProjectID})" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                </td>
                                <td scope="col" style="text-align:center">
                                    @{
                                        List<int> lstStatus = new List<int> { (int)Statuses.CoderRejected, (int)Statuses.ShadowQARejected };
                                        int RebuttalChartsCount = Model.Where(x => x.ProjectName == item.ProjectName && (x.StatusID == (int)Statuses.ShadowQARejected || x.StatusID == (int)Statuses.CoderRejected)).Select(x => x.Cnt).FirstOrDefault();
                                    }
                                    @if (RebuttalChartsCount == 0)
                                    {
                                        @RebuttalChartsCount
                                        <b>&nbsp;&nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("RebuttalCharts", "UAB")" style="pointer-events: none;" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                    else
                                    {
                                        @RebuttalChartsCount
                                        <b>&nbsp; &nbsp; &nbsp; &nbsp;</b>
                                        <a href="@Url.Action("RebuttalCharts", "UAB",new { StatusIDs = string.Join(",", lstStatus),ProjectID = item.ProjectID})" class="btn btn-info btn-sm">Get Next</a>
                                    }
                                </td>
                            </tr>
                        }
                        @*<tr>
                                <th scope="col">
                                    Phase1 - IP
                                </th>
                                <th scope="col" style="text-align:center">5 &nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("QA","UAB")" class="btn btn-info btn-sm">Get Next</a></th>
                                <th scope="col" style="text-align:center">
                                    2&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="@Url.Action("RebuttalCharts","UAB")" class="btn btn-info btn-sm">Get Next</a>
                                </th>
                            </tr>
                            <tr>
                                <th scope="col">
                                    Phase2 - Pulmonology
                                </th>
                                <th scope="col" style="text-align:center">7&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("QA","UAB")" class="btn btn-info btn-sm">Get Next</a></th>
                                <th scope="col" style="text-align:center">
                                    4&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="@Url.Action("RebuttalCharts","UAB")" class="btn btn-info btn-sm">Get Next</a>
                                </th>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

