@model UAB.DAL.Models.ErrorType
@{
    ViewData["Title"] = "ErrorType";
    var result = (List<UAB.DAL.Models.ErrorType>)ViewBag.lstErrorType;
}

<style>
    .table td, .table th {
        padding: 10px !important;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .btn-danger {
        color: #fff;
        margin-left: 20px;
        background-color: #da542e;
        border-color: #da542e;
    }

    th.sorting_asc {
        width: 160px !important;
    }
    .pagination {
        margin-left: 196px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card">Error Type</h5>
                    <h5><button type="button" style="cursor: pointer" class="btn btn-sm btn-info btn-fill" onclick="Add('')"><i class="fa fa-plus"></i>Add Error Type</button></h5>
                    <br />
                    <div id="modalContent"></div>
                    <div class="table-responsive col-8">
                        <table id="ErrorType" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 100px; font-weight:900;">Action</th>
                                    <th style="width: 250px; font-weight:900;">Error Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in result)
                                {
                                <tr>
                                    <td>
                                        <button type="button" style="cursor: pointer" class="btn btn-sm btn-info btn-fill" onclick="Edit('@item.ErrorTypeId')"><i class="fa fa-edit"></i>Edit</button>
                                        <button type="button" style="cursor: pointer" class="btn btn-sm btn-danger btn-fill" onclick="Delete('@item.ErrorTypeId')"><i class="fa fa-times"></i>Delete</button>
                                    </td>
                                    <td>@item.Name</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">

    $('#ErrorType').DataTable();
    $("#ErrorType_length").html('');
    $("#ErrorType_filter").html('');

    $(document).ready(function () {

    Add= function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditErrorType", "UAB")",
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    };

    Edit = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditErrorType", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    Delete = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("DeleteErrorType", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    ModalClose1 = function () {
        $("#modalContent").html('');
        }
    });
</script>
