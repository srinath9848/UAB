<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">

    $('#Payor').DataTable();
    $("#Payor_length").html('');
    $("#Payor_filter").html('');

    $(document).ready(function () {

    Add= function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditPayor", "UAB")",
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    };

    Edit = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditPayor", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    Delete = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("DeletePayor", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    ModalClose1 = function () {
        $("#modalContent").html('');
        }
    });
</script>
