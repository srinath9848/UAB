@model UAB.DAL.Models.Provider
@{
    ViewData["Title"] = "Provider";
    var result = (List<UAB.DAL.Models.Provider>)ViewBag.lstProvider;
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <button type="button" style="cursor: pointer" class="btn btn-sm btn-info btn-fill" onclick="Add('')"><i class="fa fa-plus"></i>Add</button>
            <br /> <br />
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Provider</h5>
                    <br />
                    <div id="modalContent"></div>
                    <div class="table-responsive">
                        <table id="Provider" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in result)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <button type="button" style="cursor: pointer" class="btn btn-sm btn-info btn-fill" onclick="Edit('@item.ProviderId')"><i class="fa fa-edit"></i>Edit</button>
                                            <button type="button" style="cursor: pointer" class="btn btn-sm btn-danger btn-fill" onclick="Delete('@item.ProviderId')"><i class="fa fa-times"></i>Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/dashboardassets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dashboardassets/libs/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/dashboardassets/extra-libs/DataTables/datatables.js"></script>
<script type="text/javascript">
    $("#settings").addClass('selected');

    $('#Provider').DataTable();
    $("#Provider_length").html('');
    $("#Provider_filter").html('');

    $(document).ready(function () {

    Add= function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditProvider", "UAB")",
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    };

    Edit = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditProvider", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    Delete = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("DeleteProvider", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    ModalClose1 = function () {
        $("#modalContent").html('');
        }
    });

</script>