<script type="text/javascript">
    $(document).ready(function () {
    Add= function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditProvider", "UAB")",
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    };

    Edit = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("Add_EditProvider", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    Delete = function (id) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("DeleteProvider", "UAB")",
            data: { "id": id},
            success: function (response) {
                $("#modalContent").html(response);
            },
            failure: function (response) {
                alert(response);
            }
        });
    }
    ModalClose1 = function () {
        $("#modalContent").html('');
        }
    });
</script>