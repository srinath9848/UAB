@model UAB.DAL.Models.ProviderFeedback
@{
    ViewData["Title"] = "ProviderFeedback";
    var result = (List<UAB.DTO.BindDTO>)ViewBag.lstProviderFeedback;
}


<div class="container-fluid">
    <div class="row">
        <form asp-action="AddSettingsProviderFeedback" style="width:100%;" asp-controller="UAB" method="POST">
            <div class="col-12">
                <div class="card">
                    <div class="col-8">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col" style="text-align:center">
                                        <h3>Add Provider Feedback</h3>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(model => model.Feedback, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Feedback, null)

                                        @*<input type="text" class="form-control ProviderFeedbackName" placeholder="Add ProviderFeedback">*@
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-success" value="AddSettingsProviderFeedback">Add Provider Feedback</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Provider Feedback</h4>
                </div>
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th scope="col">
                                <b>Name</b>
                            </th>
                            <th scope="col" style="text-align:center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in result)
                        {
                            <tr>
                                <td scope="col">
                                    @item.Name
                                </td>
                                <td>
                                    <button type="button" style="cursor: pointer" class="btn btn-info btn-fill" onclick="Edit('@item.ID')"><i class="fa fa-edit"></i>Edit</button>
                                    <button type="button" style="cursor: pointer" class="btn btn-danger btn-fill" onclick="Delete('@item.ID')"><i class="fa fa-times"></i>Delete</button>

                                </td>
                                @*<th scope="col" style="text-align:center">5&nbsp;&nbsp;&nbsp;&nbsp; <a style="pointer-events: none" href="@Url.Action("ShadowQA","UAB")" class="btn btn-info btn-sm">Get Next</a></th>*@
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
